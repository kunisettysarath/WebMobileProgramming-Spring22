<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#2FA39F9F" tools:context=".MainActivity">
    <TextView
        android:id="@+id/pizzaname"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Hungry now! Order a Pizza!!"
        android:textColor="#FF9800" android:textSize="36sp" android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />
    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="ORDER"   android:textColor="#FFD600"  app:backgroundTint="#1C1C1B"
        app:layout_constraintBottom_toBottomOf="parent"  app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pizzaname"
        app:layout_constraintVertical_bias="0.663" />
    >
</androidx.constraintlayout.widget.ConstraintLayout>